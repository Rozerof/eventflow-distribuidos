{
  "id": null,
  "title": "EventFlow - Monitoreo General",
  "tags": ["eventflow", "microservices", "python"],
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "CPU - ms-auth",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_cpu_seconds_total{job=\"auth_service\"}"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
    },
    {
      "type": "stat",
      "title": "RAM - ms-auth",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"auth_service\"}"
        }
      ],
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
    },
    {
      "type": "graph",
      "title": "Requests por segundo (RPS) - Todos los servicios",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_response_size_bytes_count[1m])",
          "legendFormat": "{{handler}}"
        }
      ],
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6}
    },
    {
      "type": "graph",
      "title": "Uso de CPU - Cada Microservicio",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "process_cpu_seconds_total{job=\"auth_service\"}", "legendFormat": "ms-auth"},
        {"expr": "process_cpu_seconds_total{job=\"analisis_service\"}", "legendFormat": "ms-analisis"},
        {"expr": "process_cpu_seconds_total{job=\"consumer_service\"}", "legendFormat": "ms-consumer"}
      ],
      "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6}
    },
    {
      "type": "graph",
      "title": "Memoria RAM - Cada Microservicio",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "process_resident_memory_bytes{job=\"auth_service\"}", "legendFormat": "ms-auth"},
        {"expr": "process_resident_memory_bytes{job=\"analisis_service\"}", "legendFormat": "ms-analisis"},
        {"expr": "process_resident_memory_bytes{job=\"consumer_service\"}", "legendFormat": "ms-consumer"}
      ],
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 6}
    },
    {
      "type": "graph",
      "title": "Recolecciones de GC - Python",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "rate(python_gc_collections_total[5m])", "legendFormat": "gen {{generation}}"}
